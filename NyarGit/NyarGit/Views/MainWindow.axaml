<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NyarGit.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:NyarGit.Views"
		xmlns:ctrl="clr-namespace:NyarGit.Views.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NyarGit.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaTitleBarHeightHint="32" 
		CanResize="True"
        ExtendClientAreaChromeHints="NoChrome"
        Title="NyarGit">
	<DockPanel>
		<!-- カスタムタイトルバーを上部に配置し、幅を全体に広げる -->
		<ctrl:CustomTitleBar DockPanel.Dock="Top" HorizontalAlignment="Stretch" />

		<!-- 他のコンテンツは残りのスペースに配置 -->
		<TextBlock Text="Main Content Area" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</DockPanel>
        
</Window>
